{
  "name": "Article",
  "base": "PersistedModel",
  "idInjection": true,
  "http": {
    "path": "/articles"
  },
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "author": {
      "type": "belongsTo",
      "model": "Author",
      "foreignKey": "author_id"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": ""
    },
    "tags": {
      "type": "hasMany",
      "model": "Tag",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {
    "include_all_data": {
      "accepts": [],
      "returns": [
        {
          "arg": "result",
          "type": "object",
          "root": true,
          "description": "List of articles with all other models data included."
        }
      ],
      "description": "Include all data from other models.",
      "http": [
        {
          "path": "/include_all_data",
          "verb": "get"
        }
      ]
    }
  }
}
